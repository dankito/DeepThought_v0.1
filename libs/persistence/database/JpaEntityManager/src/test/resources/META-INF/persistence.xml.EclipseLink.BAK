<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="deep_thought" transaction-type="RESOURCE_LOCAL">
        <!--<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <provider>oracle.toplink.essentials.ejb.cmp3.EntityManagerFactoryProvider</provider>

        <class>net.deepthought.model.AppSettings</class>
        <class>net.deepthought.model.User</class>
        <class>net.deepthought.model.Device</class>
        <class>net.deepthought.model.Group</class>

        <class>net.deepthought.model.DeepThought</class>
        <class>net.deepthought.model.DeepThoughtFavoriteEntryTemplateRelation</class>
        <class>net.deepthought.model.Category</class>
        <class>net.deepthought.model.Entry</class>
        <class>net.deepthought.model.EntriesLinkGroup</class>
        <!--<class>net.deepthought.model.EntryTemplate</class>-->
        <class>net.deepthought.model.Tag</class>
        <class>net.deepthought.model.Keyword</class>
        <class>net.deepthought.model.Person</class>
        <class>net.deepthought.model.FileLink</class>
        <class>net.deepthought.model.Note</class>
        <class>net.deepthought.model.Periodical</class>

        <properties>

            <property name="toplink.jdbc.url" value="jdbc:sqlite:data/tests/DeepThoughtDb_Tests_SQLite.db"/>
            <property name="toplink.jdbc.driver" value="org.sqlite.JDBC"/>

            <!--<property name="toplink.ddl-generation" value="drop-and-create-tables"/>-->
            <property name="toplink.ddl-generation" value="create-tables"/>
        </properties>

    </persistence-unit>

</persistence>