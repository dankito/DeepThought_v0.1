<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <ImageView
        android:id="@+id/imgvwOsLogo"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="3dp"
        />

    <TextView
        android:id="@+id/txtvwUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgvwOsLogo"
        android:layout_toLeftOf="@+id/btnAskForRegistration"
        />

    <TextView
        android:id="@+id/txtvwDeviceIpAddress"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/txtvwUserInfo"
        android:layout_above="@+id/txtvwDeviceInfo"
        android:layout_toRightOf="@id/imgvwOsLogo"
        android:layout_toLeftOf="@+id/btnAskForRegistration"
        />

    <TextView
        android:id="@+id/txtvwDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/imgvwOsLogo"
        />

    <Button
        android:id="@+id/btnAskForRegistration"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/txtvwDeviceIpAddress"
        android:layout_marginLeft="3dp"
        android:textSize="11sp"
        android:text="@string/ask_for_registration"
        />

</RelativeLayout>